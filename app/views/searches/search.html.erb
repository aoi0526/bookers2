<!--検索結果表示画面-->

<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-10">

        <% if @range == "user" %>
          <h2>Users search for <%= @word %></h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
              </tr>
            </thead>
            <tbody>
            <tr>
            <% @users.each do |user| %>
              <td>
                <%= image_tag user.get_profile_image, size:'40x40', format: 'jpeg', fallback: "no-image.jpeg", size: '40x40' %>
              </td>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= user.name %>
                <% end %>
              </td>
            <% end %>
            </tr>
            </tbody>
          </table>
        <% else %>
          <h2>Books search for <%= @word %></h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <tbody>
            <tr>
            <% @books.each do |book| %>
              <td>
                <%= image_tag book.user.get_profile_image, size:'40x40', format: 'jpeg', fallback: "no-image.jpeg", size: '40x40' %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            <% end %>
            </tr>
            </tbody>
          </table>
        <% end %>

      </div>
    </div>
  </div>
</div>

